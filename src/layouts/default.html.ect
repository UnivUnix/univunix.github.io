<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= @getDocumentTitle() %></title>
    <%- @getBlock("meta").toHTML() %>
    <%- @getBlock("styles").add(@site.styles).toHTML() %>
</head>

<body <%= "class=\"" + @document.layout + "\"" if @document.layout != "body-std" %>>
    <%- @content %>
    <%- @getBlock('scripts').add(@site.scripts).toHTML() %>
</body>
</html>
